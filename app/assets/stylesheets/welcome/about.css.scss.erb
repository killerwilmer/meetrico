.h1_spacer {
    text-transform: uppercase;
    margin-top: 2em;
    margin-bottom: 2em;
    h1{
        color: #5f5f5f;
    }
}

.spacer {
    height: 1em;
}

.box2 {
    padding: 2%;
    text-align:justify;
    border: 1px solid #AAA;
    background: url('<%= asset_path 'welcome/bg_spaces.png' %>') repeat;
    -moz-box-shadow: 1px 1px 5px #AAA;
    -webkit-box-shadow: 1px 1px 5px #AAA;
    box-shadow: 1px 1px 5px #AAA;
    a:not(.image) {
        font: 1.75em/1em 'OswaldBook', 'Helvetica', 'sans-serif';
        display: inline-block;
        margin: 0.5em 0;
    }

    img {
        width: 100%;
    }
    h2 {
        text-transform: uppercase;
    }
    li {
        list-style: disc;
    }
}
