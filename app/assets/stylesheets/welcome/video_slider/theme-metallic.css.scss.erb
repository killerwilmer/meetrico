/***********************
  COMMON SLIDER STYLING
 ***********************/
/* Overall Wrapper */

.anythingSlider {
  display: block;
  overflow: visible !important;
  position: relative;
  .anythingWindow {
    overflow: hidden;
    position: relative;
    width: 100%;
    height: 100%; }
  .anythingBase {
    background: transparent;
    list-style: none;
    position: absolute;
    overflow: visible !important;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0; }
  .arrow {
    span {
      display: block;
      visibility: hidden; }
    &.disabled {
      display: none; } }
  .panel {
    background: transparent;
    display: block;
    overflow: hidden;
    float: left;
    padding: 0;
    margin: 0; }
  .vertical .panel {
    float: none; }
  .fade {
    .panel {
      float: none;
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1; }
    .activePage {
      z-index: 0; } }
  &.rtl {
    .anythingWindow {
      direction: ltr;
      unicode-bidi: bidi-override; }
    .anythingControls ul {
      float: left;
      a {
        float: right; } }
    .start-stop {
    /* float: right; */ } }
  .anythingWindow, .anythingControls a, .arrow a, .start-stop {
    transition-duration: 0;
    -o-transition-duration: 0;
    -moz-transition-duration: 0;
    -webkit-transition-duration: 0; } }

