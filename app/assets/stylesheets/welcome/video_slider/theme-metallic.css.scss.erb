 =================================
 Default state (no keyboard focus)
 ==================================*/
/* Overall Wrapper */

.anythingSlider-metallic {
  margin: 0 auto;
/* 23px right & left padding for the navigation arrows */
  padding: 0 23px;
  .anythingWindow {
    border-top: 3px solid #333;
    border-bottom: 3px solid #333; }
  .anythingControls a {
    background: transparent url(<%= asset_path 'anythingslider/arrows-metallic.png' %>) -68px -40px repeat-x; //../images/arrows-metallic.png
    color: #000;
    border: #000 1px solid;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    &.cur, &:hover {
      background-position: -70px -137px;
      background-color: #888;
      color: #000; }
    &.start-stop {
      background: #040;
      color: #ddd;
    /* top shadow */
      -moz-box-shadow: inset 1px 2px 5px rgba(0, 0, 0, 0.5);
      -webkit-box-shadow: inset 1px 2px 5px rgba(0, 0, 0, 0.5);
      box-shadow: inset 1px 2px 5px rgba(0, 0, 0, 0.5);
      &.playing {
        background-color: #800; }
      &:hover, &.hover, .anythingControls a:hover {
        color: #fff;
      /* clear top shadow */
        -moz-box-shadow: inset 0 0 0 #000000;
        -webkit-box-shadow: inset 0 0 0 #000000;
        box-shadow: inset 0 0 0 #000000; } } }
  &.activeSlider {
    .anythingWindow {
      border-color: #0355a3; }
    .anythingControls a {
      background-color: transparent;
      &.cur, &:hover {
        background-position: -76px -57px;
        background-color: #ccc; }
      &.start-stop {
        background: #080;
        color: #fff;
        &.playing {
          color: #fff;
          background: #d00; } } }
    .start-stop {
      &:hover, &.hover {
        color: #fff; } } }
  .arrow {
    top: 50%;
    position: absolute;
    display: block;
    z-index: 100;
    a {
      display: block;
      width: 45px;
      height: 95px;
      margin: -47.5px 0 0 0;
    /* half height of image */
      text-align: center;
      outline: 0;
      background: url(<%= asset_path 'anythingslider/arrows-metallic.png' %>) no-repeat; } }
  .back {
    left: 0;
    a {
      background-position: left bottom;
      &:hover, &.hover {
        background-position: left top; } } }
  .forward {
    right: 0;
    a {
      background-position: right bottom;
      &:hover, &.hover {
        background-position: right top; } } }
  .anythingControls {
    height: 15px;
  /* limit height, needed for IE9 of all things */
    outline: 0;
    display: none;
    float: right;
    position: absolute;
    bottom: 5px;
    right: 20px;
    margin: 0 45px;
    z-index: 100;
    opacity: 0.90;
    filter: alpha(opacity = 90);
    ul {
      margin: 0;
      padding: 0;
      float: left;
      li {
        list-style: none;
        float: left;
        margin: 0;
        padding: 0; }
      a {
        display: inline-block;
        width: 10px;
        height: 10px;
        margin: 3px;
        padding: 0;
        text-decoration: none;
        text-align: center;
        outline: 0; } }
    span {
      display: block;
      visibility: hidden; }
    .anythingNavWindow {
      overflow: hidden;
      float: left; }
    li {
      &.prev span, &.next span {
        visibility: visible;
        position: relative;
        top: -6px;
      /* bring navigationSize text arrows into view */
        color: #fff; } }
    .start-stop {
      display: inline-block;
      width: 10px;
      height: 10px;
      margin: 3px;
      padding: 0;
      text-align: center;
      text-decoration: none;
      z-index: 100;
      outline: 0; } } }

