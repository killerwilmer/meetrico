/* Overall Wrapper */

.anythingSlider-default {
    margin: 0 auto;
/* 45px right & left padding for the arrows, 28px @ bottom for navigation */
    padding: 0 45px 28px 45px;
    .anythingWindow {
        border-top: 3px solid #777;
        border-bottom: 3px solid #777; }
    .anythingControls a {
    /* top shadow */
        background: #777777 url(<%= asset_path 'anythingslider/default.png' %>) center -288px repeat-x;
        color: #000;
        border-radius: 0 0 5px 5px;
        -moz-border-radius: 0 0 5px 5px;
        -webkit-border-radius: 0 0 5px 5px;
        span {
            visibility: visible; }
        &.cur {
            background: #888;
            color: #000; }
        &.start-stop {
            background-color: #040;
            color: #ddd;
            &.playing {
                background-color: #800; }
            &:hover, &.hover, .anythingControls a:hover {
                background-image: none;
                color: #ddd; } } }
    &.activeSlider {
        .anythingWindow {
            border-color: #7C9127; }
        .anythingControls a {
        /* background image = top shadow */
            background-color: #7C9127;
            &.cur, &:hover {
            /* background image removed */
                background: #7C9127; }
            &.start-stop {
                background-color: #080;
                color: #fff;
                &.playing {
                    background-color: #d00;
                    color: #fff; } } }
        .start-stop {
            &:hover, &.hover {
                color: #fff; } } }
    .arrow {
        top: 50%;
        position: absolute;
        display: block;
        a {
            display: block;
            width: 45px;
            height: 140px;
            margin: -70px 0 0 0;
        /* half height of image */
            text-align: center;
            outline: 0;
            background: url(<%= asset_path 'anythingslider/default.png' %>) no-repeat; } }
    .back {
        left: 0;
        a {
            background-position: left top;
            &:hover, &.hover {
                background-position: left -140px; } } }
    .forward {
        right: 0;
        a {
            background-position: right top;
            &:hover, &.hover {
                background-position: right -140px; } } }
    .anythingControls {
        outline: 0;
        display: none;
        ul {
            margin: 0;
            padding: 0;
            float: left;
            li {
                display: inline; }
            a {
                font: 11px / 18px Georgia, Serif;
                display: inline-block;
                text-decoration: none;
                padding: 2px 8px;
                height: 18px;
                margin: 0 5px 0 0;
                text-align: center;
                outline: 0; } }
        .anythingNavWindow {
            overflow: hidden;
            float: left; }
        .start-stop {
            padding: 2px 5px;
            width: 40px;
            text-align: center;
            text-decoration: none;
            float: right;
            z-index: 100;
            outline: 0; } } }

